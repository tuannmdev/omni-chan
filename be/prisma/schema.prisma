// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(cuid())
  email               String   @unique
  passwordHash        String?  @map("password_hash")
  name                String?
  avatarUrl           String?  @map("avatar_url")
  role                String   @default("owner")
  planType            String   @default("free") @map("plan_type")
  subscriptionStatus  String   @default("active") @map("subscription_status")
  subscriptionEndDate DateTime? @map("subscription_end_date")
  timezone            String   @default("Asia/Ho_Chi_Minh")
  language            String   @default("vi")
  emailVerified       Boolean  @default(false) @map("email_verified")
  isActive            Boolean  @default(true) @map("is_active")
  lastLoginAt         DateTime? @map("last_login_at")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  // Relations
  integrations        Integration[]
  customers           Customer[]
  products            Product[]
  aiConfigurations    AiConfiguration[]
  dailyAnalytics      DailyAnalytics[]
  notificationSettings NotificationSettings?
  assignedConversations Conversation[] @relation("AssignedAgent")
  usedSuggestions     AiSuggestion[] @relation("UsedByAgent")

  @@map("users")
  @@index([email])
  @@index([role])
  @@index([planType])
}

model Integration {
  id                  String    @id @default(cuid())
  userId              String    @map("user_id")
  platform            String
  platformAccountId   String?   @map("platform_account_id")
  platformAccountName String?   @map("platform_account_name")
  accessToken         String    @map("access_token")
  refreshToken        String?   @map("refresh_token")
  tokenExpiresAt      DateTime? @map("token_expires_at")
  pageId              String?   @map("page_id")
  pageName            String?   @map("page_name")
  shopId              String?   @map("shop_id")
  shopName            String?   @map("shop_name")
  webhookUrl          String?   @map("webhook_url")
  webhookSecret       String?   @map("webhook_secret")
  isActive            Boolean   @default(true) @map("is_active")
  syncStatus          String    @default("pending") @map("sync_status")
  lastSyncAt          DateTime? @map("last_sync_at")
  syncErrorMessage    String?   @map("sync_error_message")
  settings            Json      @default("{}")
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")

  // Relations
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversations       Conversation[]

  @@unique([userId, platform, platformAccountId])
  @@map("integrations")
  @@index([userId])
  @@index([platform])
  @@index([isActive])
  @@index([syncStatus])
}

model Customer {
  id                     String    @id @default(cuid())
  userId                 String    @map("user_id")
  name                   String?
  email                  String?
  phone                  String?
  avatarUrl              String?   @map("avatar_url")
  facebookId             String?   @map("facebook_id")
  shopeeId               String?   @map("shopee_id")
  tiktokId               String?   @map("tiktok_id")
  lazadaId               String?   @map("lazada_id")
  totalConversations     Int       @default(0) @map("total_conversations")
  totalOrders            Int       @default(0) @map("total_orders")
  totalOrderValue        Decimal   @default(0) @map("total_order_value") @db.Decimal(12, 2)
  lastOrderAt            DateTime? @map("last_order_at")
  customerLifetimeValue  Decimal   @default(0) @map("customer_lifetime_value") @db.Decimal(12, 2)
  customerSegment        String?   @map("customer_segment")
  interests              Json      @default("[]")
  preferredProducts      Json      @default("[]") @map("preferred_products")
  communicationStyle     String?   @map("communication_style")
  isActive               Boolean   @default(true) @map("is_active")
  createdAt              DateTime  @default(now()) @map("created_at")
  updatedAt              DateTime  @updatedAt @map("updated_at")

  // Relations
  user                   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversations          Conversation[]
  purchaseHistory        PurchaseHistory[]

  @@map("customers")
  @@index([userId])
  @@index([facebookId])
  @@index([shopeeId])
  @@index([customerSegment])
  @@index([isActive])
}

model Conversation {
  id                       String    @id @default(cuid())
  customerId               String    @map("customer_id")
  integrationId            String    @map("integration_id")
  platform                 String
  platformThreadId         String    @map("platform_thread_id")
  status                   String    @default("open")
  priority                 String    @default("normal")
  assignedAgentId          String?   @map("assigned_agent_id")
  messageCount             Int       @default(0) @map("message_count")
  firstResponseTime        Int?      @map("first_response_time")
  resolutionTime           Int?      @map("resolution_time")
  customerSatisfactionScore Int?     @map("customer_satisfaction_score")
  intent                   String?
  sentiment                String    @default("neutral")
  complexityScore          Decimal?  @map("complexity_score") @db.Decimal(3, 2)
  conversionProbability    Decimal?  @map("conversion_probability") @db.Decimal(3, 2)
  lastMessageAt            DateTime  @default(now()) @map("last_message_at")
  lastCustomerMessageAt    DateTime? @map("last_customer_message_at")
  lastAgentMessageAt       DateTime? @map("last_agent_message_at")
  resolvedAt               DateTime? @map("resolved_at")
  createdAt                DateTime  @default(now()) @map("created_at")
  updatedAt                DateTime  @updatedAt @map("updated_at")

  // Relations
  customer                 Customer    @relation(fields: [customerId], references: [id], onDelete: Cascade)
  integration              Integration @relation(fields: [integrationId], references: [id], onDelete: Cascade)
  assignedAgent            User?       @relation("AssignedAgent", fields: [assignedAgentId], references: [id])
  messages                 Message[]
  aiSuggestions            AiSuggestion[]

  @@unique([integrationId, platformThreadId])
  @@map("conversations")
  @@index([customerId])
  @@index([integrationId])
  @@index([status])
  @@index([assignedAgentId])
  @@index([platform])
  @@index([intent])
  @@index([lastMessageAt(sort: Desc)])
}

model Message {
  id                String    @id @default(cuid())
  conversationId    String    @map("conversation_id")
  content           String
  contentType       String    @default("text") @map("content_type")
  platformMessageId String?   @map("platform_message_id")
  senderType        String    @map("sender_type")
  senderId          String?   @map("sender_id")
  senderName        String?   @map("sender_name")
  senderAvatarUrl   String?   @map("sender_avatar_url")
  isRead            Boolean   @default(false) @map("is_read")
  isAiGenerated     Boolean   @default(false) @map("is_ai_generated")
  aiSuggestionId    String?   @map("ai_suggestion_id")
  platformData      Json      @default("{}") @map("platform_data")
  sentAt            DateTime  @default(now()) @map("sent_at")
  deliveredAt       DateTime? @map("delivered_at")
  readAt            DateTime? @map("read_at")
  createdAt         DateTime  @default(now()) @map("created_at")

  // Relations
  conversation      Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  attachments       MessageAttachment[]
  triggeredSuggestions AiSuggestion[] @relation("TriggerMessage")

  @@unique([conversationId, platformMessageId])
  @@map("messages")
  @@index([conversationId])
  @@index([senderType])
  @@index([sentAt(sort: Desc)])
  @@index([isRead])
  @@index([platformMessageId])
}

model MessageAttachment {
  id        String   @id @default(cuid())
  messageId String   @map("message_id")
  fileName  String   @map("file_name")
  fileType  String   @map("file_type")
  fileSize  Int      @map("file_size")
  fileUrl   String   @map("file_url")
  width     Int?
  height    Int?
  duration  Int?
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@map("message_attachments")
  @@index([messageId])
  @@index([fileType])
}

model AiSuggestion {
  id               String    @id @default(cuid())
  conversationId   String    @map("conversation_id")
  type             String
  title            String
  content          Json
  confidenceScore  Decimal?  @map("confidence_score") @db.Decimal(3, 2)
  triggerMessageId String?   @map("trigger_message_id")
  contextData      Json      @default("{}") @map("context_data")
  isUsed           Boolean   @default(false) @map("is_used")
  usedAt           DateTime? @map("used_at")
  usedByAgentId    String?   @map("used_by_agent_id")
  userFeedback     Int?      @map("user_feedback")
  userFeedbackText String?   @map("user_feedback_text")
  createdAt        DateTime  @default(now()) @map("created_at")
  expiresAt        DateTime? @map("expires_at")

  // Relations
  conversation     Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  triggerMessage   Message?     @relation("TriggerMessage", fields: [triggerMessageId], references: [id])
  usedByAgent      User?        @relation("UsedByAgent", fields: [usedByAgentId], references: [id])

  @@map("ai_suggestions")
  @@index([conversationId])
  @@index([type])
  @@index([isUsed])
  @@index([confidenceScore(sort: Desc)])
  @@index([createdAt(sort: Desc)])
}

model Product {
  id                  String   @id @default(cuid())
  userId              String   @map("user_id")
  name                String
  description         String?
  category            String?
  subcategory         String?
  sku                 String?
  price               Decimal? @db.Decimal(12, 2)
  salePrice           Decimal? @map("sale_price") @db.Decimal(12, 2)
  currency            String   @default("VND")
  stockQuantity       Int      @default(0) @map("stock_quantity")
  isAvailable         Boolean  @default(true) @map("is_available")
  brand               String?
  tags                Json     @default("[]")
  specifications      Json     @default("{}")
  images              Json     @default("[]")
  viewCount           Int      @default(0) @map("view_count")
  recommendationCount Int      @default(0) @map("recommendation_count")
  conversionCount     Int      @default(0) @map("conversion_count")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  // Relations
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  purchaseHistory     PurchaseHistory[]

  @@map("products")
  @@index([userId])
  @@index([category])
  @@index([isAvailable])
  @@index([price])
}

model PurchaseHistory {
  id               String    @id @default(cuid())
  customerId       String    @map("customer_id")
  productId        String?   @map("product_id")
  platform         String
  platformOrderId  String    @map("platform_order_id")
  orderStatus      String?   @map("order_status")
  productName      String    @map("product_name")
  quantity         Int
  unitPrice        Decimal   @map("unit_price") @db.Decimal(12, 2)
  totalAmount      Decimal   @map("total_amount") @db.Decimal(12, 2)
  currency         String    @default("VND")
  orderedAt        DateTime  @map("ordered_at")
  shippedAt        DateTime? @map("shipped_at")
  deliveredAt      DateTime? @map("delivered_at")
  createdAt        DateTime  @default(now()) @map("created_at")

  // Relations
  customer         Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  product          Product? @relation(fields: [productId], references: [id])

  @@unique([platform, platformOrderId, customerId])
  @@map("purchase_history")
  @@index([customerId])
  @@index([productId])
  @@index([platform])
  @@index([orderedAt(sort: Desc)])
}

model DailyAnalytics {
  id                      String   @id @default(cuid())
  userId                  String   @map("user_id")
  date                    DateTime @db.Date
  totalConversations      Int      @default(0) @map("total_conversations")
  newConversations        Int      @default(0) @map("new_conversations")
  resolvedConversations   Int      @default(0) @map("resolved_conversations")
  averageResponseTime     Decimal? @map("average_response_time") @db.Decimal(10, 2)
  newCustomers            Int      @default(0) @map("new_customers")
  returningCustomers      Int      @default(0) @map("returning_customers")
  aiSuggestionsGenerated  Int      @default(0) @map("ai_suggestions_generated")
  aiSuggestionsUsed       Int      @default(0) @map("ai_suggestions_used")
  aiAccuracyScore         Decimal? @map("ai_accuracy_score") @db.Decimal(3, 2)
  totalOrders             Int      @default(0) @map("total_orders")
  totalRevenue            Decimal  @default(0) @map("total_revenue") @db.Decimal(12, 2)
  conversionRate          Decimal? @map("conversion_rate") @db.Decimal(5, 2)
  createdAt               DateTime @default(now()) @map("created_at")

  // Relations
  user                    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("daily_analytics")
  @@index([userId, date(sort: Desc)])
  @@index([date(sort: Desc)])
}

model AiConfiguration {
  id                           String   @id @default(cuid())
  userId                       String   @map("user_id")
  name                         String
  description                  String?
  isActive                     Boolean  @default(false) @map("is_active")
  modelProvider                String   @default("openai") @map("model_provider")
  modelName                    String   @default("gpt-4") @map("model_name")
  temperature                  Decimal  @default(0.7) @db.Decimal(3, 2)
  maxTokens                    Int      @default(1000) @map("max_tokens")
  systemPrompt                 String?  @map("system_prompt")
  productRecommendationPrompt  String?  @map("product_recommendation_prompt")
  responseSuggestionPrompt     String?  @map("response_suggestion_prompt")
  confidenceThreshold          Decimal  @default(0.7) @map("confidence_threshold") @db.Decimal(3, 2)
  enableSentimentAnalysis      Boolean  @default(true) @map("enable_sentiment_analysis")
  enableIntentDetection        Boolean  @default(true) @map("enable_intent_detection")
  createdAt                    DateTime @default(now()) @map("created_at")
  updatedAt                    DateTime @updatedAt @map("updated_at")

  // Relations
  user                         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("ai_configurations")
  @@index([userId])
  @@index([isActive])
}

model NotificationSettings {
  id                   String   @id @default(cuid())
  userId               String   @unique @map("user_id")
  emailNewMessage      Boolean  @default(true) @map("email_new_message")
  emailDailySummary    Boolean  @default(true) @map("email_daily_summary")
  emailWeeklyReport    Boolean  @default(true) @map("email_weekly_report")
  emailSystemUpdates   Boolean  @default(true) @map("email_system_updates")
  inappNewMessage      Boolean  @default(true) @map("inapp_new_message")
  inappAiSuggestions   Boolean  @default(true) @map("inapp_ai_suggestions")
  inappSystemAlerts    Boolean  @default(true) @map("inapp_system_alerts")
  pushNewMessage       Boolean  @default(true) @map("push_new_message")
  pushUrgentConversations Boolean @default(true) @map("push_urgent_conversations")
  quietHoursStart      String   @default("22:00:00") @map("quiet_hours_start")
  quietHoursEnd        String   @default("08:00:00") @map("quiet_hours_end")
  timezone             String   @default("Asia/Ho_Chi_Minh")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  // Relations
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notification_settings")
}
