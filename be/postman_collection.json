            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const response = pm.response.json();",
                  "  pm.environment.set(\"access_token\", response.data.accessToken);",
                  "  pm.test(\"Token refreshed\", () => {",
                  "    pm.expect(response.success).to.be.true;",
